package am;

import java.util.*;

public class Car {
	//필드(속성)
	String company;
	String model;
	String color;
	int distance;
	String date;
	
	//기본생성자
	public Car() {
		
	}
	
	public Car(String company, String model, String color, int distance) {
		super();
		this.company = company;
		this.model = model;
		this.color = color;
		this.distance = distance;
	} //this는 필드를 말함

	//메서드
	public void print() {
		System.out.println("회사:" + company);
		System.out.println("모델:" + model);
		System.out.println("색상:" + color);
		System.out.println("주행거리:" + distance);
		System.out.println("연식:" + date);
		
	}
	
}
