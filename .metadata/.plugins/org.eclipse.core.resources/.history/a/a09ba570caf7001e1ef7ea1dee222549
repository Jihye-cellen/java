package practice;

public class Order {
	
	String type;
	String color;
	int price;
	int qnt;//field
	
	
	public Order(String type, String color, int price, int qnt) {
		super();
		this.type = type;
		this.color = color;
		this.price = price;
		this.qnt = qnt;
	}//생성자

	
	public int total() {
		int total = price * qnt;
				return total;
	}
	
	public void print() {
	 System.out.printf("%s\t%s\t%,d원\t%d개\t%d원\n", type, color, price, qnt, total());
	}
	
	public int avg() {
		for(int i=0; i<price.size(); i++) {
			
		}
	}
	
}//class

