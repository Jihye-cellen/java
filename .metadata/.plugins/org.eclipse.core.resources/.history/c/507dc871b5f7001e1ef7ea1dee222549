package am;

public class Score {
	
	//필드(속성)
	String name;
	int kor;
	int eng;
	int mat;
	
	//생성자
	
	public Score() {
		
	}
	
	public Score(String name, int kor, int eng, int mat) {
		super();
		this.name = name;
		this.kor = kor;
		this.eng = eng;
		this.mat = mat;
	}

	//메서드
	//void값은 돌려줄 값이 아닐때만 사용가능 +return과 같이 못씀
	
	public int total() {
		int total = kor+eng+mat;
		return total;
	}
	
	public double avg() {
		return (kor+eng+mat)/3.;
	}
	
	public void print() {
		System.out.printf("%s\t%d\t%d\t%d\t%d\t%.2f\n", name, kor, eng, mat, total(), avg());
	}
}


