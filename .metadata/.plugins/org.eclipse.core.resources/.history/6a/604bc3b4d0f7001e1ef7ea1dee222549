package pm;

public class Sale {
	String code;
	String name;
	int price;
	int qnt;
	
	//금액을 구하는 메서드
	public int sum() {
		int sum = price * qnt;
		return sum;
	}
	
	public void print_land() {
		System.out.printf("%s\t%s\t%,d원\t%d개\t%,d원\n", code, name, price, qnt, sum());
	}
	
	public void print_port() {
		System.out.println("가격:"+price);
		System.out.println("수량:"+qnt);
		System.out.println("금액:"+sum());
		
	}
}
